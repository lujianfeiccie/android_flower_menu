<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >
      <FrameLayout
          android:id="@+id/layout_mid_bt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" 
        >
        <Button
            android:id="@+id/bt_mid_cross"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="+"
             />
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/layout_mid_bt"
        android:layout_centerHorizontal="true" 
        >
	    <!-- Item3 -->
	    <LinearLayout 
	         android:id="@+id/layout_menu_item3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
     	   android:layout_centerHorizontal="true" 
	       android:orientation="vertical">
	    <ImageButton
	       android:id="@+id/bt_menu_item3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/test_menu_item3"
	         />
	       <TextView
	       style="@style/bt_menu_item_text"
	        android:text="拍照"    
	           />
	    </LinearLayout>
	    <!-- Item2 -->
		 <LinearLayout    
		     android:id="@+id/layout_menu_item2"
		     android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" 
            android:orientation="vertical">
          <ImageButton
            android:id="@+id/bt_menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/test_menu_item2" />
             <TextView 
               style="@style/bt_menu_item_text"
          	   android:text="离线"
          	  />
		 </LinearLayout>
		 <!-- Item1 -->
         <LinearLayout  
             android:id="@+id/layout_menu_item1"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
        	android:layout_centerHorizontal="true" 
            android:orientation="vertical"> 
           <ImageButton
            android:id="@+id/bt_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/test_menu_item1" />
           <TextView 
               style="@style/bt_menu_item_text"
          	   android:text="征途"
          	  />
           </LinearLayout>
           <!-- Item4 -->
         <LinearLayout 
             android:id="@+id/layout_menu_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
        	android:layout_centerHorizontal="true" 
            android:orientation="vertical">
         <ImageButton
            android:id="@+id/bt_menu_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/test_menu_item4" />
           <TextView 
               style="@style/bt_menu_item_text"
          	   android:text="旅友"
          	  />
         </LinearLayout>
         <!-- Item5 -->
	    <LinearLayout 
	        android:id="@+id/layout_menu_item5"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
        	android:layout_centerHorizontal="true" 
            android:orientation="vertical">
        <ImageButton
            android:id="@+id/bt_menu_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/test_menu_item5" /> 
            <TextView 
               style="@style/bt_menu_item_text"
          	   android:text="我"
          	  />
         </LinearLayout>
    </RelativeLayout>
</RelativeLayout>